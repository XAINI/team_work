            %option dm01
            %option pm01
            %option staff01
            %option 普通员工
      %tr
        %td
        %td
          %span 项目经理
          %i.glyphicon.glyphicon-user{style: "z-index:2;position:relative;left:5px;"}
          %select{style: "padding-left: 30px; position: relative; left: -20px;"}
            %option 
            %option dm01
            %option pm01
            %option staff01
            %option 普通员工
        %td 
          %span 项目助理
          %i.glyphicon.glyphicon-user{style: "z-index:2;position:relative;left:5px;"}
          %select{style: "padding-left: 30px; position: relative; left: -20px;"}
            %option 
            %option dm01
            %option pm01
            %option staff01
            %option 普通员工
      %tr
        %td
        %td
          %span 销售
          %i.glyphicon.glyphicon-user{style: "z-index:2;position:relative;left:5px;"}
          %select{style: "padding-left: 30px; position: relative; left: -20px;"}
            %option 
            %option dm01
            %option pm01
            %option staff01
            %option 普通员工
        %td 
          %span 客户
          / TODO 模态框
          %i.glyphicon.glyphicon-user{style: "z-index:2;position:relative;left:5px;"}
          %input{style: "padding-left: 30px; position: relative; left: -20px;",data:{:toggle => "modal", :target =>".bs-example-modal-lg"}}
      %tr
        %td
        %td{colspan: "2"}
          %span 优先级
