            %option 未开始
            %option 立项中
            %option 进行中
            %option 待验收
            %option 已完成
            %option 延期完成
            %option 已暂停
            %option 已取消
          %span{style: "color: red;"} *
        %td 
          %span 项目进度
          %input
          %span %
      %tr
        %td
        %td
          %span 计划开始于
          / TODO日历组件
          %i.glyphicon.glyphicon-calendar{style: "z-index:2;position:relative;left:5px;"}
          %input{style: "padding-left: 30px; position: relative; left: -20px;",type: "text", value: "2017-02-27 21:05",id: "datetimepicker2"}
