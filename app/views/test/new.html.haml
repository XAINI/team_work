          %i.glyphicon.glyphicon-calendar{style: "z-index:2;position:relative;left:5px;"}
          %input{style: "padding-left: 30px; position: relative; left: -20px;",type: "text", value: "2017-02-27 21:05",id: "datetimepicker3"}
      %tr
        %td
        %td
          %span 实际开始于
          / TODO日历组件
          %i.glyphicon.glyphicon-calendar{style: "z-index:2;position:relative;left:5px;"}
          %input{style: "padding-left: 30px; position: relative; left: -20px;",type: "text", value: "2017-02-27 21:05",id: "datetimepicker4"}
        %td 
          %span 实际完成于
          / TODO 日历组件
          %i.glyphicon.glyphicon-calendar{style: "z-index:2;position:relative;left:5px;"}
          %input{style: "padding-left: 30px; position: relative; left: -20px;",type: "text", value: "2017-02-27 21:05",id: "datetimepicker5"}
      %tr
        %td
        %td{colspan: "2"}
          %span 控制工时
          %input
          %span 小时
      %tr
        %td{colspan: "3"}
          %span{style: "font-weight: bold;font-size: 18px;"}
            %i.glyphicon.glyphicon-yen
            项目金额
      %tr
        %td
        %td
          %span 币种
          %select
            %option 系统默认
        %td 
          %span 汇率
          %input{disabled: true}
      %tr
        %td
        %td
          %span 合同金额(￥)
          %input
        %td 
          %span 税后金额(￥)
          %input
      %tr
        %td{colspan: "3"}
          %a.btn.btn-primary{href: "/test"} 创建
          %a.btn.btn-default{href: "/test"} 取消
  .bottom-district

  .modal.fade.bs-example-modal-sm{tabindex: "-1", role: "dialog", aria: {labelledby: "modalLabel"}}
    .modal-dialog.modal-sm{:role => "document"}
      .modal-content
        .modal-header{style:"background-color:#2B84DD;"}
          %button.close{type: "button", data:{dismiss: "modal", global: "false" , aria: {label: "Close"}}}
            %i.glyphicon.glyphicon-remove
          %h4.modal-title{style:"color:white;font-family:Microsoft YaHei;font-size:18px;font-weight: bold;"} 选择项目分类
        .modal-body
          .title-e
            %label 项目分类 ↓
          .checkbox
            %label
              %input{type: "checkbox"}
              Audit
          .checkbox
            %label
              %input{type: "checkbox"}
              ME
          .checkbox
            %label
              %input{type: "checkbox"}
              SC项目
          .checkbox
            %label
              %input{type: "checkbox"}
              TP 项目
          .checkbox
            %label
              %input{type: "checkbox"}
              创意类
          .checkbox
            %label
              %input{type: "checkbox"}
              策略类
          .checkbox
            %label
              %input{type: "checkbox"}
              高新复审
          .checkbox
            %label
              %input{type: "checkbox"}
              高新认定
        .modal-footer
          %button.btn.btn-primary{type: "button"}选择
          %button.btn.btn-default.close-modal{type: "button", data:{dismiss: "modal"}}关闭

  .modal.fade.bs-example-modal-lg{tabindex: "-1", role: "dialog", aria: {labelledby: "modalLabel"}}
    .modal-dialog.modal-lg{:role => "document"}
      .modal-content
        .modal-header{style:"background-color:#2B84DD;"}
          %button.close{type: "button", data:{dismiss: "modal", global: "false" , aria: {label: "Close"}}}
            %i.glyphicon.glyphicon-remove
          %h4.modal-title{style:"color:white;font-family:Microsoft YaHei;font-size:18px;font-weight: bold;"} 选择客户
        .modal-body{style: "background-color: #EAEAEA;"}
          .modal-search-box{style: "background-color: white;padding: 10px;"}
            %form.form-inline
              .form-group{style: "margin-right: 20px;"}
                %span 编码
                %input.form-control
              .form-group{style: "margin-right: 20px;"}
                %span 名称
                %input.form-control
              %button.btn.btn-primary{type: "submit"} 查询
          .modal-table-list{style: "background-color: white;margin-top: 10px;padding: 10px;"}
            %table.table.table-hover
              %thead
                %tr{style: "background-color: #EAEAEA"}
                  %td 编码
                  %td 名称
                  %td 阶段
                  %td 城市
                  %td 分类
              %tbody
                -@customer_num_ary.each do |c|
                  %tr
                    %td
                      =c
                    %td 斯柯达
                    %td 签约客户
                    %td 北京
                    %td 汽车
        .modal-footer
          %button.btn.btn-primary{type: "button"}选择
          %button.btn.btn-default.close-modal{type: "button", data:{dismiss: "modal"}}关闭