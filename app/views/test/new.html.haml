            %option 紧急
            %option 较高
            %option 高
            %option 低
            %option 较低
            %option 不急
      %tr
        %td
        %td{colspan: "2"}
          %span 项目分类
          / TODO 模态框
          %button{data:{:toggle => "modal", :target =>".bs-example-modal-sm"}} 
            %i.glyphicon.glyphicon-plus
            添加
      %tr
        %td
        %td{colspan: "2"}
          %span 描述
          %textarea{style:"width:600px;height:100px;resize:none;"}
      %tr
        %td
        %td{colspan: "2"}
          %span 排序编号
          %input
      %tr
        %td
        %td{colspan: "2"}
          %span 创建人
          %span{style: "font-weight: bold;"} Alan
      %tr
        %td{colspan: "3"}
          %span{style: "font-weight: bold;font-size: 18px;"}
            %i.glyphicon.glyphicon-cog
            项目设置
      %tr
        %td
        %td
          %span 必须开始于
